# $0 0 'hello world' => hello world
# $0 1 'hello world' => ifmmp xpsme
# $0 2 'hello world' => jgnnq yqtnf
#!/bin/bash
LETTERS=( "a" "b" "c" "d" "e" "f" "g" "h" "i" "j" "k" "l" "m" "n" "o" "p" "q" "r" "s" "t" "u" "v" "w" "x" "y" "z" )
ROT=${1}
for((i=0;i<26;i++))
do
	ROTATED=${ROTATED}${LETTERS[$(( (${i}+${ROT}) % 26 ))]}
	STD=${STD}${LETTERS[${i}]}
done
echo ${2} | tr ${STD} ${ROTATED}